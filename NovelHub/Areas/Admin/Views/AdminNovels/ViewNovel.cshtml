                                if (ViewBag.Following != null)
                                {
                                    <a id="UnfollowBtn" class="py-2 px-3 d-block" href="/AreaUser/AUManagerProfile/RemoveFavoriteNovel/@ViewBag.novel.NovelID"><i class="fa-solid fa-bookmark me-1"></i> Bỏ Theo Dõi</a>
